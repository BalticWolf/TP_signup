include layoutAction

block content
    .main.container
        .row

            p.alert.alert-danger Les mots de passe ne correspondent pas

                .col-md-6.col-md-offset-3
                    h1.display-4.m-b-2 Sign Up

                    // register form

                    form(method='POST' action='/login')
                        div.form-group
                            label(for='name') Name:
                            input#name.form-control(type='text', placeholder='first and last' name='name' value=`${user}` required)
                        div.form-group
                            label(for='email') Email:
                            input#email.form-control(type='email', placeholder='name@email.com' name='email' value=`${email}` required)
                        div.form-group
                            label(for='pw') Password:
                            input#pw.form-control(type='password' name='password' required)
                        div.form-group
                            label(for='pw2') Confirm Password:
                            input#pw2.form-control(type='password' name='confirmPassword' required)

                        button.btn.btn-primary(type='submit') Sign up